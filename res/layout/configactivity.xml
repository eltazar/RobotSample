<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/configbackground4" >

    <!-- android:background="#000000" -->

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="42dp"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_ipAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connection_status"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background"
        android:ems="10" />

    <TextView
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_ipAddress"
        android:layout_below="@+id/edit_ipAddress"
        android:text="Porta"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ipAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/connection_status"
        android:layout_alignLeft="@+id/edit_ipAddress"
        android:text="Indirizzo Ip"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_port"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Connetti" />

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/port"
        android:layout_below="@+id/port"
        android:background="@android:drawable/editbox_background"
        android:ems="10" />

    <Button
        android:id="@+id/autoconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Connessione automatica" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="  Disconnetti " />

</RelativeLayout>