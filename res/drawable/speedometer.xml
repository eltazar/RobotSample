<item android:id="@android:id/background">
    <shape>
        <!-- radius background of progressbar -->
        <corners android:radius="5dip" />
        <gradient
                android:startColor="#bfbfbf"
                android:centerY="0.75"
                android:centerColor="#939393"
                android:endColor="#646464"
                android:angle="270"
        />
    </shape>
</item>

 <item android:id="@android:id/progress">
  <clip>
   <shape>
    <corners android:radius="5dip" />

    <gradient
        android:angle="270"
        android:centerColor="#ffa21d"
        android:centerY="0.75"
        android:endColor="#ff0000"
        android:startColor="#fdff5e" />

    <!--
     <stroke android:width="1dp" android:color="#6B8E23" />
    -->
   </shape>
  </clip>
 </item>
</layer-list>